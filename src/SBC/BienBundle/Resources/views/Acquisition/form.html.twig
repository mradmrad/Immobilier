<div id="page_content_inner">
    <script src="https://cdn.ckeditor.com/4.6.2/standard-all/ckeditor.js"></script>
    {{ form_start(form, {'attr':{'class':'uk-form-stacked', 'id':'form_validation'}}) }}
    {{ form_errors(form) }}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-medium-1-1  uk-width-medium-1-1">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        DÃ©tails
                    </h3>
                </div>
                <div class="md-card-content medium-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-1-2">
                            <div class="uk-form-row">
                                <div class="parsley-row">
                                    <span class="uk-form-help-block">Nouvelle</span>
                                    {{ form_widget(form.bien) }}
                                    <span>     {{ form_errors(form.bien) }} </span>
                                </div>
                            </div>
                            <div class="uk-form-row">
                                <div class="parsley-row">
                                    {{ form_label(form.clientEstimation,   "Estimation client"  ) }}
                                    {{ form_widget(form.clientEstimation) }}
                                    <span>     {{ form_errors(form.clientEstimation) }} </span>
                                </div>
                            </div>
                            <div class="uk-form-row">
                                <div class="parsley-row">
                                    {{ form_label(form.agencyEstimation,   "Estimation agence"  ) }}
                                    {{ form_widget(form.agencyEstimation) }}
                                    <span>     {{ form_errors(form.agencyEstimation) }} </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ form_label(form.description, "Commentaires") }}
                    </h3>
                </div>
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            <div class="uk-form-row">
                                <div class="parsley-row">
                                    {{ form_widget(form.description) }}
                                    <span> {{ form_errors(form.description) }} </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <button class="md-fab md-fab-accent md-fab-wave-light" href="#" id="acquisition_add"
                data-uk-tooltip="{cls:'uk-tooltip-small',pos:'left'}" title="Enregistrer" name="save">
            <i class="material-icons">&#xE161;</i>
        </button>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
<script>
    $(function () {
        setFormatNumber();
        CKEDITOR.replace('sbc_bienbundle_acquisition_description', {
            height: 250
        });
        $('.select').kendoComboBox({
            filter: "contains",
            suggest: true
        });
    });
    function setFormatNumber() {
        $('.numeric').blur(function () {
            $(this).parseNumber({format: "######0.00", locale: "us"});
            $(this).formatNumber({format: "######0.00", locale: "us"});
        });
        $('.money').blur(function () {
            $(this).parseNumber({format: "#,##0.000", locale: "fr"});
            $(this).formatNumber({format: '#,##0.000', locale: 'fr'});
        });
    }
</script>