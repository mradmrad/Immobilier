                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="md-card">
                    <div class="md-card-toolbar">
                        <h3 class="md-card-toolbar-heading-text">
                            Gallerie
                        </h3>
                    </div>
                    <div class="md-card-content medium-padding">
                        <div class="uk-margin-bottom uk-text-center uk-position-relative">
                            {% if  acquisition.bien.pictures|length ==0 %}
                                <span class="uk-badge uk-badge-danger">  Pas encore d'images </span>
                            {% endif %}
                        </div>
                        <div class="uk-grid " data-uk-grid-margin>
                            {% for bienPicture in acquisition.bien.pictures %}
                                <div class="uk-width-medium-1-4">
                                    <div class="parsley-row" style="height: 324px;display: grid;border: solid 1px #e7e7e7;text-align: center">
                                        <span class="uk-form-help-block"> {{ bienPicture.description }}</span>
                                        <a href="{{ vich_uploader_asset(bienPicture, 'file') }}"
